    Layout = null;
}


<form method="post" enctype="multipart/form-data" action="/Signature/SendEmailWithFile">
    <div class="form-group row">
            <input name="Name" type="text" class="custom-file-input">
    </div>
    <div class="form-group row">
        <label class="control-label"></label>
        <div class="custom-file">
            <input name="EmailAttachments" type="file" class="custom-file-input EmailAttachments" id="customFile">
            <label class="custom-file-label" for="customFile">Choose file</label>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Add book" class="btn btn-primary" />
    </div>
</form>

